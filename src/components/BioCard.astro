---
interface Props {
  name: string;
  role: string;
  bio: string;
  imageUrl: string;
  location: string;
  socialLinks?: {
    linkedin?: string;
    email?: string;
  };
}

const { name, role, bio, imageUrl, location, socialLinks = {} } = Astro.props;
import { Mail, Linkedin } from "lucide-astro";
---

<div class="bg-gray-50 flex items-center justify-center py-8 px-4">
  <div class="container max-w-6xl">
    <div
      class="bg-white rounded-xl shadow-sm overflow-hidden transition-all duration-300 ease-in-out hover:-translate-y-1 hover:shadow-xl"
    >
      <div class="flex flex-col md:flex-row">
        <!-- Profile Image Section -->
        <div
          class="md:w-1/3 bg-gradient-to-br from-blue-300 to-blue-400 flex items-center justify-center p-8"
        >
          <img
            src={imageUrl}
            alt={name}
            class="rounded-full shadow-lg w-40 h-40 md:w-48 md:h-48 object-cover"
          />
        </div>

        <!-- Content Section -->
        <div class="md:w-2/3 p-6 md:p-8">
          <!-- Header -->
          <div
            class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-3 mb-4"
          >
            <h3 class="text-2xl md:text-3xl font-bold text-blue-600">{name}</h3>
            <span
              class="bg-blue-50 text-blue-600 px-4 py-2 rounded-full text-sm font-medium inline-block w-fit"
            >
              {role}
            </span>
          </div>

          <!-- Bio -->
          <p class="text-gray-600 mb-6 leading-relaxed">
            {bio}
          </p>

          <!-- Footer with Social Links -->
          <div class="border-t border-gray-200 pt-4">
            <div
              class="flex flex-col sm:flex-row sm:justify-between sm:items-center gap-4"
            >
              <!-- Social Icons -->
              <div class="flex gap-4">
                {
                  socialLinks.linkedin && (
                    <a
                      href={socialLinks.linkedin}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-blue-600 hover:text-blue-700 transition-all duration-300 hover:scale-110 cursor-pointer"
                      aria-label="LinkedIn"
                    >
                      <Linkedin />
                    </a>
                  )
                }

                {
                  socialLinks.email && (
                    <a
                      href={socialLinks.email}
                      class="text-blue-600 hover:text-blue-700 transition-all duration-300 hover:scale-110 cursor-pointer"
                      aria-label="Email"
                    >
                      <Mail />
                    </a>
                  )
                }
              </div>

              <!-- Location -->
              <span class="text-gray-500 text-sm flex items-center gap-2">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path
                    fill-rule="evenodd"
                    d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
                    clip-rule="evenodd"></path>
                </svg>
                {location}
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
