---
import teamData from "../data/teamData.json";
import BioCard from "./BioCard.astro";
---

<section class="max-w-6xl mx-auto md:px-6 md:py-12">
  <div class="mb-16 text-center">
    <h2 class="text-4xl font-bold text-gray-900 mb-4">Our Team</h2>
    <p class="text-gray-600 text-lg">
      Meet the professionals dedicated to serving you
    </p>
  </div>

  <div class="space-y-8">
    {
      teamData.map((member) => (
        <BioCard
          name={member.name}
          role={member.title}
          bio={member.bio && member.bio.length > 0 ? member.bio[0] : ""}
          imageUrl={member.image}
          location={member.location}
          socialLinks={member.socialLinks}
        />
      ))
    }
  </div>
</section>
