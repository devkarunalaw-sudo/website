---
export interface ReviewCard {
  name: string;
  rating: number;
  comment: string;
}

interface Props {
  name?: string;
  rating?: number;
  comment?: string;
}

const { name, rating = 5, comment } = Astro.props;
const maxStars = 5;
---

<blockquote
  class="py-8 rounded-b-md shadow-md p-4 md:w-1/3 lg:w-2/4 xl:w-3/6 2xl:w-1/6"
>
  <div class="slide-in md:lide-in-right">
    <span>
      <svg
        class="w-8 h-8 text-text-highlight mb-4 rotate-180"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="currentColor"
        viewBox="0 0 18 14"
      >
        <path
          d="M6 0H2a2 2 0 0 0-2 2v4a2 2 0 0 0 2 2h4v1a3 3 0 0 1-3 3H2a1 1 0 0 0 0 2h1a5.006 5.006 0 0 0 5-5V2a2 2 0 0 0-2-2Zm10 0h-4a2 2 0 0 0-2 2v4a2 2 0 0 0 2 2h4v1a3 3 0 0 1-3 3h-1a1 1 0 0 0 0 2h1a5.006 5.006 0 0 0 5-5V2a2 2 0 0 0-2-2Z"
        ></path>
      </svg>
      <h1 class="text-xl font-bold text-heading">{name}</h1>
    </span>
    <div class="flex mb-5 px-0">
      {
        Array.from({ length: maxStars }, (_, i) => (
          <svg
            class={`w-5 h-5 ${i < rating ? "text-amber-400" : "text-gray-400"}`}
            xmlns="http://www.w3.org/2000/svg"
            fill="currentColor"
            viewBox="0 0 20 20"
          >
            <path d="M10 15l-3.09 1.63.59-3.43L5 10l3.41-.49L10 6l1.59 3.51L15 10l-2.5 2.2.59 3.43L10 15z" />
          </svg>
        ))
      }
    </div>
    <p class="font-thin">
      {comment}
    </p>
  </div>
</blockquote>
