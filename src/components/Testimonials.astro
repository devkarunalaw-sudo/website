---
import Card from "../components/Card.astro";
import reviews from "../data/reviews.json";
---

<div class="flex flex-col w-full rounded-xl p-4 py-24 shadow-md">
  <div class="mt-5 max-w-xl text-center mx-auto slide-in">
    <h1
      class="block font-extrabold text-heading text-4xl md:text-5xl lg:text-6xl"
    >
      <span>
        Over <span class="text-text-highlight">100+</span> Reviews
      </span>
      <span> From Our Clients </span>
    </h1>
  </div>
  <div class="flex flex-col gap-2 justify-center md:flex-row md:gap-8 mt-8">
    {
      reviews.map((review) => (
        <Card
          name={review.name}
          comment={review.comment}
          rating={review.rating}
        />
      ))
    }
  </div>
</div>
