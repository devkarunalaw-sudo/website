---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import logo from "../assets/karuna_logo.svg";
---

<Layout title="Page Not Found - Karuna Law">
  <div slot="content" class="flex flex-col items-center justify-center mt-24">
    <Image
      src={logo}
      alt="Karuna Law Logo"
      width={120}
      height={120}
      class="mb-6"
    />
    <h1 class="text-4xl font-bold text-gray-900 mb-3">Page Not Found</h1>
    <p class="text-gray-600 mb-8">The page you're looking for doesn't exist.</p>

    <a
      href="/"
      class="text-red-700 hover:text-red-800 hover:underline font-medium"
    >
      Return Home
    </a>
  </div>
</Layout>
